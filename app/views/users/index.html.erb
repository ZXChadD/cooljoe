        <div class="bhoechie-tab-content" id="menu-past">
          <center>
            <%= render partial: 'past_joblistings_list' %>
          </center>
        </div>
        <div class="bhoechie-tab-content" id="menu-invoices">
          <center>
            <%= render partial: 'invoices_list' %>
          </center>
        </div>
        <div class="bhoechie-tab-content" id="menu-electricians">
          <center>
            <%= render partial: 'favourite_electricians_list' %>
          </center>
        </div>
      </div>
    </div>
